#:import sm kivy.uix.screenmanager
ScreenManager:
    id:manager
    transition:sm.FadeTransition(duration=.0)
    MDScreen:
        name:"username"
        FloatLayout:
            Image:
                source:"components/icons/wallets.jpg"
                pos_hint:{"center_x":.5,"center_y":.85}
                height: self.texture_size[1]
                width: self.texture_size[1]
                size:5,5
            MDLabel:
                text:"Create Account!"
                font_style:"H5"
                halign:"center"
                theme_text_color:"Custom"
                font_name:'components/fonts/Gill Sans Bold.otf'
                text_color:36/255, 146/255, 255/255, 1
                pos_hint:{"center_x":.5,"center_y":.63}
            MDIcon:
                icon:"numeric-1"
                halign:"center"
                pos_hint:{"center_x":.3,"center_y":.58}
                theme_text_color:"Custom"
                text_color:.5,.5,1,1
                font_size: dp(50)
            MDIcon:
                icon:"numeric-2"
                halign:"center"
                pos_hint:{"center_x":.5,"center_y":.58}
                theme_text_color:"Custom"
                text_color:.5,.5,.6,1
                font_size: dp(30)
            MDIcon:
                icon:"numeric-3"
                halign:"center"
                pos_hint:{"center_x":.7,"center_y":.58}
                theme_text_color:"Custom"
                text_color:.5,.5,.5,1
                font_size: dp(30)
            MDSeparator:
                pos_hint:{"center_x":.5,"center_y":.58}
            MDTextField:
                id:username
                mode: "rectangle"
                #fill_color: 0, 0, 0, .4
                size_hint: .6, .1
                pos_hint:{'center_x':.5, 'center_y':.45}
                hint_text:"Username:"
                #text_color: 1, 1, 1, 1
                font_size: dp(25)
            MDRaisedButton:
                id:usr
                text: "Next"
                size_hint: .4, .06
                pos_hint:{'center_x':.7, 'center_y':.25}
                md_bg_color: 83 / 225, 186 / 225, 115 / 225, 1
                on_release:
                    app.username_verify(username.text)
    MDScreen:
        name:"passcode"
        md_bg_color:1, 1, 1, 1
        FloatLayout:
            Image:
                source:"components/icons/lock.png"
                pos_hint:{"center_x":.5,"center_y":.5}
                height: self.texture_size[1]
                width: self.texture_size[1]
                size:5,5
            MDLabel:
                text:"Enter pass code"
                font_style:"H5"
                theme_text_color:"Custom"
                text_color:36/255, 146/255, 255/255, 1
                halign:"center"
                pos_hint:{"center_x":.5,"center_y":.83}
                font_name:'components/fonts/Gill Sans Bold.otf'
            MDLabel:
                text:"It is required everytime you login for security purporse"
                font_style:"Caption"
                font_size: "13sp"
                halign:"center"
                font_name:'components/fonts/Gill Sans.otf'
                pos_hint:{"center_x":.5,"center_y":.8}
            MDIcon:
                icon:"numeric-1"
                halign:"center"
                pos_hint:{"center_x":.3,"center_y":.73}
                theme_text_color:"Custom"
                text_color:.5,.5,.5,1
                font_size: dp(30)
            MDIcon:
                icon:"numeric-2"
                halign:"center"
                pos_hint:{"center_x":.5,"center_y":.73}
                theme_text_color:"Custom"
                text_color:.5,.5,1,1
                font_size: dp(50)
            MDIcon:
                icon:"numeric-3"
                halign:"center"
                pos_hint:{"center_x":.7,"center_y":.73}
                theme_text_color:"Custom"
                text_color:.5,.5,.5,1
                font_size: dp(30)
            MDSeparator:
                pos_hint:{"center_x":.5,"center_y":.73}
            NumberOnlyField:
                id:code
                mode: "rectangle"
                size_hint: .5, .1
                hint_text:"Code"
                password:True
                pos_hint:{'center_x':.5, 'center_y':.6}
                font_size: dp(50)
            NumberOnlyField:
                id:recode
                mode: "rectangle"
                size_hint: .5, .1
                hint_text:"Confirm-Code"
                helper_text: "hello"
                password:True
                pos_hint:{'center_x':.5, 'center_y':.45}
                font_size: dp(50)
